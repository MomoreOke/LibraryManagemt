@model List<Book>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h3>Book index view</h3>
<a asp-action="Add" class="btn btn-outline-primary">Add A Book</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Book Title</th>
            <th scope="col">Author</th>
            <th scope="col">Number of Copies</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
        <tr>
            <th scope="row">@book.Id</th>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.NumberOfCopies</td>
            <td><a href="/Book/Delete/@book.Id" class="btn-sm btn-danger">Delete</a></td>
        </tr>
        }
       

    </tbody>
</table>